{
	"manifest_version": 2,

	"name":"Easy Searching",
	
	"description":"Easy searching for on-line purchase in India",
	
	"version":"26.0",

	"browser_action": {
		"default_icon":"icon.png",
		"default_popup":"popup.html"
	},
	
	"permissions": [
		"tabs" ,
    "*://*/*",
		"storage"
	],
	
	"optional_permissions": [ "tabs", "cookies", "*://*/", "notifications", "\u003Call_urls>", "webRequest", "webRequestBlocking" ],
	
	"content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
	
	"content_scripts": [
        {
        "matches": [
"*://*.zopnow.com/*","*://*.bigbasket.com/*","*://*.amazon.in/*","*://*.flipkart.com/*","*://flipkart.com/*","*://*.snapdeal.com/*", "*://ebay.in/*","*://jabong.com/*", "*://shopclues.com/*", "*://paytm.com/*", "*://myntra.com/*"
            ],
        "js": ["contentScript.js", "jquery-1.10.2.js", "displayItems.js","defaultOffers.js", "ajaxResponse.js"],
		"css": [ "popup.css" ],
        "run_at": "document_end"         
        }
    ],
	
	"background": {
    "scripts": ["jquery-1.10.2.js","background.js","ajaxResponse.js","ajaxCorsRequest.js","defaultOffers.js"],
    "persistent": false
  },
  
   "web_accessible_resources": [ "icon.png", "icon_75x75.png"]
}
